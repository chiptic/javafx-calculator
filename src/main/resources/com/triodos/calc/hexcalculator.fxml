<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>


<?import javafx.geometry.Insets?>
<GridPane alignment="CENTER" hgap="5" vgap="5" xmlns="http://javafx.com/javafx/16"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.triodos.calc.HexCalculator">


  <GridPane GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-border-width: 1px; -fx-border-color: black;">
    <GridPane.margin>
      <Insets top="5" right="5" bottom="5" left="5" />
    </GridPane.margin>
    <Label fx:id="display" text="0" GridPane.columnSpan="4" GridPane.halignment="RIGHT"/>
    <!-- Buttons omitted for brevity -->
  </GridPane>

  <Button text="1" onAction="#processNumber" styleClass="button" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
  <Button text="2" onAction="#processNumber" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
  <Button text="3" onAction="#processNumber" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
  <Button text="4" onAction="#processNumber" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
  <Button text="5" onAction="#processNumber" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
  <Button text="6" onAction="#processNumber" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
  <Button text="7" onAction="#processNumber" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
  <Button text="8" onAction="#processNumber" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
  <Button text="9" onAction="#processNumber" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
  <Button text="A" onAction="#processNumber" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
  <Button text="B" onAction="#processNumber" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
  <Button text="C" onAction="#processNumber" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
  <Button text="D" onAction="#processNumber" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
  <Button text="E" onAction="#processNumber" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
  <Button text="F" onAction="#processNumber" GridPane.rowIndex="3" GridPane.columnIndex="2"/>

  <Button text="CL" onAction="#processClear" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
  <Button text="0" onAction="#processNumber" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
  <Button text="=" onAction="#processOperator" GridPane.rowIndex="6" GridPane.columnIndex="2"/>

  <Button text="+" onAction="#processOperator" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
  <Button text="-" onAction="#processOperator" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
  <Button text="*" onAction="#processOperator" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
  <Button text="/" onAction="#processOperator" GridPane.rowIndex="4" GridPane.columnIndex="3"/>

  <Button text="âˆš" onAction="#processSqrt" GridPane.rowIndex="5" GridPane.columnIndex="3"/>
  <Button text="Hex to Dec" onAction="#processHexToDec" GridPane.rowIndex="2" GridPane.columnIndex="4" GridPane.columnSpan="2"/>

  <Label fx:id="display" text="0" styleClass="display" GridPane.columnSpan="4" GridPane.rowIndex="0"/>

</GridPane>
